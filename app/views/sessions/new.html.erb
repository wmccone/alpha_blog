<h1 class="text-center mt-4">Log into Alpha Blog </h1>

<div class="container">

  <div class="row justify-content-center p-4">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow px-5 py-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label" %> <br/>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label" %> <br/>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
        <div class="form-group row justify-content-center">
        <%= f.submit "Log in", class: "col-2 btn btn-outline-light mt-3" %>
        </div>
        

        
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[Return to Users]', users_path, class: "row justify-content-center" %>
    </div>
  </div>
</div>