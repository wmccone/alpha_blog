<div class="container">

  <div class="row justify-content-center p-4">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow px-5 py-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">

          <%= f.label :username, class: "col-2 col-form-label" %> <br/>
          <div class="col-10"></div>
          <%= f.text_field :username, class: "form-control", placeholder: "Enter a Username" %>

        </div>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label" %> <br/>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label" %> <br/>
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
        <div class="form-group row justify-content-center">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "col-2 btn btn-outline-light mt-3") %>
        </div>
        

        
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[Return to Users]', users_path, class: "row justify-content-center" %>
    </div>
  </div>
</div>