<h1 class="text-center mt-4">Create a new Category </h1>

<div class="container">

  <div class="row justify-content-center p-4">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow px-5 py-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">

          <%= f.label :name, "Category Name", class: "col-2 col-form-label" %> <br/>
          <div class="col-10"></div>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>

        </div>
    
        <div class="form-group row justify-content-center">
        <%= f.submit class: "col-2 btn btn-outline-light mt-3" %>
        </div>
        

        
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[Return to Users]', users_path, class: "row justify-content-center" %>
    </div>
  </div>
</div>