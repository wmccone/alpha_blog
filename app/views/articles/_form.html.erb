<div class="container">

  <div class="row justify-content-center p-4">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow px-5 py-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">

          <%= f.label :title, class: "col-2 col-form-label" %> <br/>
          <div class="col-10"></div>
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>

        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %> <br/>
          <%= f.text_area :description, rows: 8, class: "form-control shadow rounded", placeholder: "Description of article" %>
        </div>
        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label" %> <br/>
          <%= f.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Make your selection from the list below(can be empty)" }, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
        </div>
        <div class="form-group row justify-content-center">
        <%= f.submit class: "col-2 btn btn-outline-light mt-3"%>
        </div>
        
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[Return to Articles]', articles_path, class: "row justify-content-center" %>
    </div>
  </div>
</div>