<div class="container">
  <% if @article.errors.any? %>
    <h2> The following errors prevented the article from being saved </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %> 
    </ul>
  <% end %>   
  <div class="row justify-content-center p-4">
    <div class="col-10">

      <%= form_with(model: @article, class: "shadow px-5 py-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">

          <%= f.label :title, class: "col-2 col-form-label" %> <br/>
          <div class="col-10"></div>
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>

        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %> <br/>
          <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Description of article" %>
        </div>
        <div class="form-group row justify-content-center">
        <%= f.submit class: "col-2 btn btn-outline-light btn-lg mt-3"%>
        </div>
        
      <% end %>
    </div>
    
    <%= link_to '[Return to Articles]', articles_path, class: "row justify-content-center" %>
  </div>
</div>